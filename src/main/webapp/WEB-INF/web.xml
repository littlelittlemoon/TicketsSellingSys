<?xml version="1.0" encoding="UTF-8"?><web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"         xmlns="http://xmlns.jcp.org/xml/ns/javaee"         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"         version="3.1"         metadata-complete="true">    <!--maven创建的项目默认servlet为2.3，要改为3.1，可以在tomcat的webapps\examples\WEB-INF中找到web.xml复制过来-->    <display-name>Hello Spring MVC</display-name>    <!-- Spring应用上下文， 理解层次化的ApplicationContext -->    <context-param>        <param-name>contextConfigLocation</param-name>        <param-value>classpath:configs/spring-*.xml</param-value>    </context-param>    <listener>        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>    </listener>    <!-- 字符集过滤器 -->    <filter>        <filter-name>characterEncodingFilter</filter-name>        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>        <init-param>            <param-name>encoding</param-name>            <param-value>UTF-8</param-value>        </init-param>        <!--forceencoding表示在代码中设置了编码无效-->        <!--<init-param>-->        <!--<param-name>forceEncoding</param-name>-->        <!--<param-value>true</param-value>-->        <!--</init-param>-->    </filter>    <filter-mapping>        <filter-name>characterEncodingFilter</filter-name>        <url-pattern>/*</url-pattern>    </filter-mapping>    <servlet>        <servlet-name>mvc-dispatcher</servlet-name>        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>        <!-- dispatcher对应的上下文配置，默认为/WEB-INF/$servlet-name$-servlet.xml -->        <!-- 如果你不想用 SpringMVC 的使用原则，可以重新配置 SpringMVC DispatcherServlet 在 web.xml            文件中： -->        <init-param>            <!-- 通过这个配置改变默认参数 -->            <param-name>contextConfigLocation</param-name>            <param-value>classpath:configs/spring-*.xml            </param-value>        </init-param>        <load-on-startup>1</load-on-startup>    </servlet>    <servlet-mapping>        <servlet-name>mvc-dispatcher</servlet-name>        <!-- mvc-dispatcher拦截所有请求 -->        <url-pattern>/</url-pattern>    </servlet-mapping>    <!--首页 -->    <welcome-file-list>        <welcome-file>pages/login.jsp</welcome-file>    </welcome-file-list>    <!-- 错误页 -->    <error-page>        <error-code>404</error-code>        <location>/pages/others/404page.jsp</location>    </error-page></web-app>